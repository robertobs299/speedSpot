<MyCard@MDSwiperItem>:
    blanco: ''
    image_source: ''
    vehicle_name: ''
    vehicle_year: ''
    vehicle_power: ''

    MDCard:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(225), dp(225)  # 75% de 300
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: dp(7.5)  # 75% de 10
        spacing: dp(7.5)  # 75% de 10

        MDLabel:
            text: root.blanco
            theme_text_color: 'Primary'
            size_hint_y: None
            height: dp(18)  # 75% de 24
            halign: 'center'

        Image:
            source: root.image_source
            size_hint_y: 2
            height: dp(150)  # 75% de 200

        MDLabel:
            text: root.vehicle_name
            theme_text_color: 'Primary'
            size_hint_y: None
            height: dp(18)  # 75% de 24
            halign: 'center'

        MDLabel:
            text: root.vehicle_year
            theme_text_color: 'Primary'
            size_hint_y: None
            height: dp(18)  # 75% de 24
            halign: 'center'

        MDLabel:
            text: root.vehicle_power
            theme_text_color: 'Primary'
            size_hint_y: None
            height: dp(18)  # 75% de 24
            halign: 'center'


MDScreen:

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(7.5)  # 75% de 10
        spacing: dp(7.5)  # 75% de 10

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(187.5)  # 75% de 250
            spacing: dp(7.5)  # 75% de 10

            FloatLayout:
                size_hint_x: 0.2
                size_hint_y: None
                height: dp(187.5)  # 75% de 250
                spacing: dp(7.5)  # 75% de 10
                canvas:
                    Color:
                        rgb: 1, 1, 1
                    Ellipse:
                        pos: self.pos
                        size: 187.5, 187.5  # 75% de 250
                        source: 'Bichoplaya.png'
                        angle_start: 0
                        angle_end: 360

            BoxLayout:
                orientation: 'vertical'
                spacing: dp(3.75)  # 75% de 5
                size_hint_x: 0.8
                height: self.minimum_height

                MDLabel:
                    id: username_label
                    text: app.username
                    halign: 'center'
                    color: 1, 0.84, 0, 1
                    font_size: '18sp'  # 75% de 24sp
                    font_bold: True
                    font_font_name: 'Roboto-Bold'
                    size_hint_y: None

                MDLabel:
                    id: organized_label
                    text: f'Quedadas organizadas: {app.quedadas_organizadas}'
                    halign: 'center'
                    theme_text_color: 'Secondary'
                    size_hint_y: None
                    height: dp(18)  # 75% de 24
                    font_size: '10sp'

                MDLabel:
                    id: attended_label
                    text: f'Quedadas visitadas: {app.quedadas_visitadas}'
                    halign: 'center'
                    theme_text_color: 'Secondary'
                    size_hint_y: None
                    height: dp(18)  # 75% de 24
                    font_size: '10sp'

        Widget:
            size_hint_y: None
            height: dp(1.5)  # 75% de 2
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

        BoxLayout:
            padding: dp(22.5)  # 75% de 30
            size_hint_y: None
            height: dp(24) + dp(22.5) * 2  # 75% de (32 + 30*2)

            MDLabel:
                text: 'Vehículos:'
                font_style: 'H4'
                size_hint_y: None
                height: dp(24)  # 75% de 32
                halign: 'left'

        MDSwiper:
            id: swiper
            size_hint_y: None
            height: dp(225)  # 75% de 300

        Widget:  # Añade un widget para la separación
            size_hint_y: None
            height: dp(20)  # 75% de 50

        BoxLayout:
            padding: dp(22.5)  # 75% de 30
            size_hint_y: None
            height: dp(24) + dp(22.5) * 2  # 75% de (32 + 30*2)

            MDLabel:
                text: 'Mejor quedada organizada:'
                font_style: 'H4'
                size_hint_y: None
                height: dp(24)  # 75% de 32
                font_size: '18sp'  # 75% de 24sp
                halign: 'left'
