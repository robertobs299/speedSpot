BoxLayout:
    orientation: 'vertical'

    MDToolbar:
        title: "SpeedSpot"
        md_bg_color: .2, .2, .2, 1
        specific_text_color: "#FFBF00"

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: 'screen 1'
            text: "Inicio"
            icon: 'home'

            ScrollView:
                BoxLayout:
                    id: card_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(10)
                    spacing: dp(15)
                    pos_hint: {"center_x": 0.5}

        MDBottomNavigationItem:
            name: 'screen 2'
            text: "AÃ±adir quedada"
            icon: 'plus-circle'

            MDLabel:
                text: "Aqui habrian quedadas :D"
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: "Historial"
            icon: 'calendar'

            ScrollView:
                BoxLayout:
                    id: historial_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(10)
                    spacing: dp(15)
                    pos_hint: {"center_x": 0.5}

        MDBottomNavigationItem:
            name: 'screen 4'
            text: "Perfil"
            icon: 'account'

            MDLabel:
                text: "Achoooo"
                halign: 'center'
