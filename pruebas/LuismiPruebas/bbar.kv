#:import dp kivy.metrics.dp

BoxLayout:
    orientation: 'vertical'

    MDBoxLayout:
        size_hint_y: None
        height: dp(56)
        md_bg_color: 0.2, 0.2, 0.2, 1
        padding: dp(10)
        spacing: dp(10)

        MDLabel:
            text: "SpeedSpot"
            font_style: "H6"
            size_hint_x: None
            width: dp(200)
            color: "#FFBF00"

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: 'screen 1'
            text: "Inicio"
            icon: 'home'

            ScrollView:
                BoxLayout:
                    id: card_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(10)
                    spacing: dp(15)
                    pos_hint: {"center_x": 0.5}

        MDBottomNavigationItem:
            name: 'screen 2'
            text: "Añadir quedada"
            icon: 'plus-circle'

            MDLabel:
                text: "Aquí habrían quedadas :D"
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: "Historial"
            icon: 'calendar'

            ScrollView:
                BoxLayout:
                    id: historial_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(10)
                    spacing: dp(15)
                    pos_hint: {"center_x": 0.5}

        MDBottomNavigationItem:
            name: 'screen 4'
            text: "Perfil"
            icon: 'account'

            MDLabel:
                text: "Achoooo"
                halign: 'center'
